{% from "../../components/button/button.njk" import button %}
{% from "../../components/icon/icon.njk" import icon %}
{% from "../../components/picture/picture.njk" import picture %}

<section class="intro">
	<div class="container">
		<h1 class="text-3xl font-bold underline">
			Hello world!
		</h1>
		<p>{{ intro.hi }}</p>
		<h1>{{ intro.name }}</h1>
		<p>{{ intro.who }}</p>
		{{ button({ text: 'Click Me!' }) }}

		{{ icon({ iconName: 'svg-logo', attr: 'width=300 height=300' }) }}
		{{ icon({ iconName: 'arrow-right', attr: 'width=300 height=300' }) }}

		{{ picture({
			src: intro.img,
			className: 'intro__img'
		}) }}

	</div>
</section>
